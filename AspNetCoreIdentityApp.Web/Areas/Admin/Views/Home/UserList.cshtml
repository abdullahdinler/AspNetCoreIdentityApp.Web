@model List<Admin.UserViewModel>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Üye Listesi</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Email</th>
            <th>Rol</th>
            <th scope="col">Rol İşlemleri</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><user-role-list id="@item.Id"></user-role-list></td>
                <td><a asp-controller="Roles" asp-action="AssignRole" asp-route-id="@item.Id">Rol Ata</a></td>
            </tr>
        }

    </tbody>
</table>

